<div class="mt-4">
    <h3>EDIT COURSE</h3>

    <form class="mt-4" method="POST" action="/courses/{{course._id}}?_method=PUT">
        <div class="form-group">
            <label for="name">Tên khóa học</label>
            <input type="text" name="name" class="form-control" value="{{course.name}}" id="name">
        </div>
        <div class="form-group">
            <label for="description">Mô tả</label>
            <textarea name="description" class="form-control" id="description">{{course.description}}</textarea>
        </div>
        <div class="form-group">
            <label for="videoId">Video</label>
            <input type="text" name="videoId" class="form-control" value="{{course.videoId}}" id="videoId">
        </div>
        <div class="form-group">
            <label for="level">Cấp độ</label>
            <input type="text" name="level" class="form-control" value="{{course.level}}" id="level">
        </div>
        <div class="form-group">
            <label for="level">Image</label>
            <input type="text" name="image" class="form-control" value="{{course.image}}" id="image">
        </div>
        <div class="form-group">
            <label for="level">:Slug</label>
            <input type="text" name="slug" class="form-control" value="{{course.slug}}" id="slug">
        </div>
        <button type="submit" class="btn btn-primary">Edit course</button>
    </form>
</div>